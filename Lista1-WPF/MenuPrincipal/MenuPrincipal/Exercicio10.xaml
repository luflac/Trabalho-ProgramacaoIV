<Window x:Class="MenuPrincipal.Exercicio10"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercício 10 - Simulador de Sorteio" Height="250" Width="400"
        Background="#F5F5FF" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Simulador de Sorteio (1 a 6)" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Sortear" Width="120" Height="40" 
                    Background="#009900" Foreground="White"
                    Click="Sortear_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
