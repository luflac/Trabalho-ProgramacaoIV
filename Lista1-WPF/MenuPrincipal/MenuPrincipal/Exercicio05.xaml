<Window x:Class="MenuPrincipal.Exercicio5"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercício 5 - Descrição de Enum" Height="250" Width="400"
        Background="#F5F5FF" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Selecione um tipo de usuário:" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <ComboBox x:Name="comboUsuarios" Width="200" Margin="0,0,0,20" HorizontalAlignment="Center"/>

            <Button Content="Exibir Descrição" Width="130" Height="35" 
                    Background="#009900" Foreground="White"
                    HorizontalAlignment="Center" Click="ExibirDescricao_Click"/>
        </StackPanel>
    </Grid>
</Window>
