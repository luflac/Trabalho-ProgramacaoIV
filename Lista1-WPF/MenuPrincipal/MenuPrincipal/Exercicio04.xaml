<Window x:Class="MenuPrincipal.Exercicio4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercício 4 - Verificador de Maioridade" Height="250" Width="400"
        Background="#F5F5FF" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Verificar Maioridade" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Label Content="Idade:" HorizontalAlignment="Center"/>
                <TextBox x:Name="txtIdade" Width="100" HorizontalAlignment="Center"/>
            </StackPanel>

            <Button Content="Próximo" Width="100" Height="35" 
                    Background="#009900" Foreground="White"
                    HorizontalAlignment="Center" Click="Verificar_Click"/>
        </StackPanel>
    </Grid>
</Window>
