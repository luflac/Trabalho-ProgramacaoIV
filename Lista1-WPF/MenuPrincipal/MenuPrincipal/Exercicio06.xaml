<Window x:Class="MenuPrincipal.Exercicio6"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercício 6 - Contador de Cliques" Height="250" Width="400"
        Background="#F5F5FF" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Contador de Cliques" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <Button Content="Clique Aqui" Width="120" Height="40" 
                    Background="#009900" Foreground="White"
                    Click="ContarClique_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
