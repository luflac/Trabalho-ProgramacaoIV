<Window x:Class="MenuPrincipal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menu de Exercícios - WPF" Height="550" Width="650"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF1E9406"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="0,0,0,-16">
        <Border Background="White" CornerRadius="12" Padding="30" Margin="136,0,136,0" VerticalAlignment="Center">
            <StackPanel Height="429" Margin="-128,0,-128,0">
                <TextBlock Text=" Atividades - WPF " FontSize="40" FontWeight="Bold"
                           HorizontalAlignment="Center" Foreground="black" Margin="0,0,0,25" Height="55" Width="334"/>
                <UniformGrid Columns="2" Rows="5" Height="347">
                    <Button Content="Exercício 1" Click="AbrirExercicio1_Click" RenderTransformOrigin="-0.769,0.555" Width="270"/>
                    <Button Content="Exercício 2" Click="AbrirExercicio2_Click"/>
                    <Button Content="Exercício 3" Click="AbrirExercicio3_Click"/>
                    <Button Content="Exercício 4" Click="AbrirExercicio4_Click"/>
                    <Button Content="Exercício 5" Click="AbrirExercicio5_Click"/>
                    <Button Content="Exercício 6" Click="AbrirExercicio6_Click"/>
                    <Button Content="Exercício 7" Click="AbrirExercicio7_Click"/>
                    <Button Content="Exercício 8" Click="AbrirExercicio8_Click"/>
                    <Button Content="Exercício 9" Click="AbrirExercicio9_Click" Margin="0,12,0,0" Height="50" VerticalAlignment="Top"/>
                    <Button Content="Exercício 10" Click="AbrirExercicio10_Click"/>
                </UniformGrid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
