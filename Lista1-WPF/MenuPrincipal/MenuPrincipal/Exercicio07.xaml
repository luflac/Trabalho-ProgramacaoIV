<Window x:Class="MenuPrincipal.Exercicio7"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercício 7 - Pagamento Parcelado" Height="300" Width="420"
        Background="#F5F5FF" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Simulador de Pagamento Parcelado" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" Margin="0,0,0,20" HorizontalAlignment="Center">
                <StackPanel Margin="10">
                    <Label Content="Valor Total:"/>
                    <TextBox x:Name="txtValorTotal" Width="120"/>
                </StackPanel>
                <StackPanel Margin="10">
                    <Label Content="Parcelas:"/>
                    <ComboBox x:Name="comboParcelas" Width="120"/>
                </StackPanel>
            </StackPanel>

            <Button Content="Calcular" Width="120" Height="40" 
                    Background="#009900" Foreground="White"
                    Click="Calcular_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
