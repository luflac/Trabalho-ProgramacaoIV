<Window x:Class="MenuPrincipal.Exercicio8"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercício 8 - Dia da Semana" Height="250" Width="400"
        Background="#F5F5FF" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Verificar Dia da Semana" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Label Content="Selecione uma data:" HorizontalAlignment="Center"/>
                <DatePicker x:Name="dateSelecionada" Width="150" HorizontalAlignment="Center"/>
            </StackPanel>

            <Button Content="Verificar" Width="100" Height="35" 
                    Background="#009900" Foreground="White"
                    HorizontalAlignment="Center" Click="Verificar_Click"/>
        </StackPanel>
    </Grid>
</Window>
