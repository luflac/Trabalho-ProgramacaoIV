<Window x:Class="MenuPrincipal.Exercicio3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Exercício 3 - Dias Até o Aniversário" Height="250" Width="400"
        Background="#F5F5FF" WindowStartupLocation="CenterScreen">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Dias até o próximo aniversário" 
                       FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <StackPanel Margin="10" HorizontalAlignment="Center">
                <Label Content="Data de nascimento:" HorizontalAlignment="Center"/>
                <DatePicker x:Name="dateNascimento" Width="150" HorizontalAlignment="Center"/>
            </StackPanel>

            <Button Content="Calcular" Width="100" Height="35" 
                    Background="#009900" Foreground="White"
                    HorizontalAlignment="Center" Click="Calcular_Click"/>
        </StackPanel>
    </Grid>
</Window>
